    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.5.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  }
